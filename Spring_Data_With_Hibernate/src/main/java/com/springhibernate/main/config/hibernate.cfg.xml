<hibernate-configuration>
    <session-factory>

        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate_kodewala</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Bastia@9090</property>

       
        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        
        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        
        <mapping class="com.springhibernate.main.entity.Payment"/>
    </session-factory>
</hibernate-configuration>
